<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="card form">
    <h2>New Gram</h2>

    <%= simple_form_for @gram do |f| %>
      <%= f.input :picture %>
      <br />
      <%= f.input :message %>
      <br />
      <%= f.submit 'Post!', class: 'my-btn' %>
    <% end %>
  </div>
</div>